{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabledManagers": ["pipenv"],
  "packageRules": [
    {
      "matchPaths": [
        "Pipfile"
      ],
      "matchCurrentVersion": "!/^0/",
      "commitMessageSuffix": " (test)"
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["at any time"]
  }
}
